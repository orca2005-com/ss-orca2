# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Database Configuration (if using direct database connection)
VITE_DATABASE_URL=your_database_url_here

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here

# File Upload Configuration
VITE_UPLOAD_MAX_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# External Services (Optional)
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
VITE_CLOUDINARY_API_KEY=your_cloudinary_key

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true